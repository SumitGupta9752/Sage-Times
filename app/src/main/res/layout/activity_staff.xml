<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".FacultyActivity">

    <TextView
        android:id="@+id/titleBar_Staff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#67C6E3"
        android:text="Staff Details"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="#430A5D"
        android:textSize="26dp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_below="@+id/titleBar_Staff"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/parent_layout"
            android:layout_height="wrap_content">


        </RelativeLayout>
    </ScrollView>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:src="@drawable/add_new_member"
        app:backgroundTint="#FFF455"
        app:elevation="6dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        app:pressedTranslationZ="12dp" />

</RelativeLayout>