<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BDDF6A"
    android:backgroundTint="#D5BBDA"
    tools:context=".QuizActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:layout_width="250sp"
                android:layout_height="200dp"
                android:id="@+id/img"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:background="@drawable/quiz_background"
                android:padding="16dp">

            </ImageView>

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:paddingBottom="2dp"
                android:layout_below="@+id/img"
                android:text="Let's play "
                android:textAlignment="center"
                android:textColor="#D84315"
                android:textSize="26dp"
                android:textStyle="bold" />

            <View
                android:id="@+id/quiz_view"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/title"
                android:layout_marginTop="5dp"
                android:background="@color/black"></View>

            <TextView
                android:id="@+id/questionCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/quiz_view"
                android:textStyle="bold"
                android:textColor="#D81B60"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="32dp"
                android:text="Number of Questions: 5"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/questionTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/questionCount"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="32dp"
                android:text="Questions"
                android:textSize="24sp" />

            <Button
                android:id="@+id/option1Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/questionTextView"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="16dp"
                android:text="Option A" />

            <Button
                android:id="@+id/option2Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/option1Button"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:text="Option B" />

            <Button
                android:id="@+id/option3Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/option2Button"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:text="Option C" />

            <Button
                android:id="@+id/option4Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/option3Button"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:text="Option D" />

            <Button
                android:id="@+id/submitButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/option4Button"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="16dp"
                android:text="Submit" />


        </RelativeLayout>
    </ScrollView>
</RelativeLayout>

