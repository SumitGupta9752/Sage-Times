<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuestionPaperActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Previous Year Question Paper"
        android:textSize="26dp"
        android:textColor="#0612F1"
        android:id="@+id/title_pyqs"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginTop="5dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:id="@+id/view_hr"
        android:layout_marginTop="5dp"
        android:background="#906E1D"
        android:layout_below="@+id/title_pyqs"
        android:backgroundTint="#CF4242"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="56dp"
        android:textAlignment="center"
        android:layout_below="@+id/view_hr"
        android:text=" waiting for upload"/>

</RelativeLayout>