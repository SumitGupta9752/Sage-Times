            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="230dp"
                    android:layout_gravity="center"
                    android:layout_margin="1dp"
                    android:background="@drawable/outline_shape">

                    <ImageView
                        android:id="@+id/students_icon"
                        android:layout_width="195dp"
                        android:layout_height="200dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/user_icon"
                        android:src="@drawable/outline_shape">

                    </ImageView>

                    <TextView
                        android:id="@+id/students_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginStart="40dp"
                        android:layout_marginBottom="5dp"
                        android:gravity="center"
                        android:text="Profile"
                        android:textAlignment="center"
                        android:textSize="20dp"
                        android:textStyle="bold">

                    </TextView>


                    <ImageView
                        android:id="@+id/faculty_icon"
                        android:layout_width="190dp"
                        android:layout_height="200dp"
                        android:layout_marginStart="203dp"

                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        android:background="@drawable/faculty_icon"
                        android:src="@drawable/outline_shape">

                    </ImageView>

                    <TextView
                        android:id="@+id/faculty_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginStart="260dp"
                        android:layout_marginBottom="5dp"
                        android:gravity="center"
                        android:text="Faculty"
                        android:textAlignment="center"
                        android:textSize="20dp"
                        android:textStyle="bold">

                    </TextView>

                </FrameLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_margin="5dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:background="@drawable/outline_shape">

                    <ImageView
                        android:id="@+id/staff_icon"
                        android:layout_width="195dp"
                        android:layout_height="180dp"

                        android:layout_margin="5dp"
                        android:background="@drawable/staff_icon"
                        android:src="@drawable/outline_shape">

                    </ImageView>

                    <TextView
                        android:id="@+id/staff_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginStart="40dp"
                        android:layout_marginBottom="5dp"
                        android:gravity="center"
                        android:text="staffs details"
                        android:textAlignment="center"
                        android:textSize="20dp"
                        android:textStyle="bold">

                    </TextView>

                    <ImageView
                        android:id="@+id/game_icon"
                        android:layout_width="190dp"
                        android:layout_height="180dp"

                        android:layout_marginStart="203dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/game_icon"
                        android:src="@drawable/outline_shape">

                    </ImageView>

                    <TextView
                        android:id="@+id/game_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginStart="240dp"
                        android:layout_marginBottom="5dp"
                        android:gravity="center"
                        android:text="Play Games"
                        android:textAlignment="center"
                        android:textSize="20dp"
                        android:textStyle="bold">

                    </TextView>

                </FrameLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="235dp"
                    android:layout_margin="1dp"
                    android:background="@drawable/outline_shape">

                    <ImageView
                        android:id="@+id/assignment_icon"
                        android:layout_width="195dp"

                        android:layout_height="200dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/assignments_icon"
                        android:src="@drawable/outline_shape">

                    </ImageView>

                    <TextView
                        android:id="@+id/assignment_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginStart="40dp"
                        android:layout_marginBottom="5dp"
                        android:gravity="center"
                        android:text="Assignment"
                        android:textAlignment="center"
                        android:textSize="20dp"
                        android:textStyle="bold">

                    </TextView>

                    <ImageView
                        android:id="@+id/previous_year_question_paper_icon"
                        android:layout_width="190dp"
                        android:layout_height="200dp"
                        android:layout_marginStart="203dp"

                        android:layout_marginTop="5dp"
                        android:background="@drawable/previous_year_paper"
                        android:src="@drawable/outline_shape">

                    </ImageView>

                    <TextView
                        android:id="@+id/previous_year_question_paper_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginStart="230dp"
                        android:layout_marginBottom="5dp"
                        android:gravity="center"
                        android:text="Question Paper"
                        android:textAlignment="center"
                        android:textSize="20dp"
                        android:textStyle="bold">

                    </TextView>

                </FrameLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="235dp"
                    android:layout_margin="1dp"
                    android:background="@drawable/outline_shape">

                    <ImageView
                        android:id="@+id/calculator_icon"
                        android:layout_width="195dp"
                        android:layout_height="200dp"
                        android:layout_margin="5dp"

                        android:background="@drawable/calculator_icon"
                        android:src="@drawable/outline_shape">

                    </ImageView>

                    <TextView
                        android:id="@+id/calculator_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginStart="45dp"
                        android:layout_marginBottom="5dp"
                        android:gravity="center"
                        android:text="Calculator"
                        android:textAlignment="center"
                        android:textSize="20dp"
                        android:textStyle="bold">

                    </TextView>

                    <ImageView
                        android:id="@+id/quiz_icon"
                        android:layout_width="190dp"
                        android:layout_height="200dp"
                        android:layout_marginStart="203dp"
                        android:layout_marginTop="5dp"

                        android:background="@drawable/quiz_icon"
                        android:src="@drawable/outline_shape">

                    </ImageView>

                    <TextView
                        android:id="@+id/quiz_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginStart="300dp"
                        android:layout_marginBottom="5dp"
                        android:gravity="center"
                        android:text="Quiz"
                        android:textAlignment="center"
                        android:textSize="20dp"
                        android:textStyle="bold">

                    </TextView>

                </FrameLayout>

            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:id="@+id/container1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/outline_shape">

                <ImageView
                    android:id="@+id/placement_cell"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:padding="7dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/outline_shape"
                    android:src="@drawable/placement">

                </ImageView>

                <TextView
                    android:id="@+id/placement_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/placement_cell"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="5dp"
                    android:text="Placement Quide"
                    android:textSize="20dp"
                    android:textStyle="bold">

                </TextView>

                <ImageView
                    android:id="@+id/project_ideas"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_margin="2dp"
                    android:padding="7dp"
                    android:layout_toRightOf="@+id/placement_cell"
                    android:background="@drawable/outline_shape"
                    android:src="@drawable/idea">

                </ImageView>

                <TextView
                    android:id="@+id/project_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/project_ideas"
                    android:layout_marginLeft="60dp"
                    android:layout_marginBottom="5dp"
                    android:layout_toRightOf="@+id/placement_text"
                    android:text="Project Ideas"
                    android:textSize="20dp"
                    android:textStyle="bold">

                </TextView>
            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/donation_icon"
                        android:layout_width="200dp"
                        android:layout_height="200dp"

                        android:layout_gravity="center"
                        android:layout_margin="1dp"
                        android:layout_marginStart="100dp"
                        android:background="@drawable/donation_icon"
                        android:src="@drawable/outline_shape"
                        android:textAlignment="center">

                    </ImageView>

                    <TextView
                        android:id="@+id/donation_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginStart="70dp"
                        android:layout_marginBottom="5dp"
                        android:gravity="center"
                        android:text="Donate"
                        android:textAlignment="center"
                        android:textSize="20dp"
                        android:textStyle="bold">

                    </TextView>

                </FrameLayout>

            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/sage_official"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center"
                android:backgroundTint="#E4690B"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:layout_margin="20dp"
                android:text="SAGE University Official Portal" />

            <Button
                android:id="@+id/sign_out"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:text="sign-out" />

            <TextView
                android:id="@+id/about_developers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="About Developers"
                android:textAlignment="center"
                android:textColor="@color/my_primary"
                android:textColorLink="@color/my_secondary"
                android:textSize="15dp"
                android:textStyle="bold">

            </TextView>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>